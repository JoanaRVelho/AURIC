<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcim.intrusiondetection"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/auric_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hcim.auric.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hcim.auric.activities.SettingsActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.IntrusionsListActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.InsertPasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.ConfirmAndTurnOffPasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.Unlock" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.ConfirmAndChangePasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.images.FullIntruderPicture" >
        </activity>
        <activity android:name="hcim.auric.activities.images.IntruderPictureGrid" >
        </activity>
        <activity android:name="hcim.auric.activities.images.RecognizedPicturesGrid" >
        </activity>
        <activity android:name="hcim.auric.activities.images.FullRecognizedPicture" >
        </activity>
        <activity android:name="hcim.auric.record.screen.screencast_root.RunScreencast" >
        </activity>
        <activity android:name="hcim.auric.record.screen.textlog.details.RunSimpleText" >
        </activity>
        <activity android:name="hcim.auric.record.screen.textlog.timeline.TimelineActivity" >
        </activity>

        <service
            android:name="hcim.auric.authentication.BackgroundService"
            android:enabled="true" >
        </service>
        <service
            android:name="mswat.core.activityManager.HierarchicalService"
            android:label="AURIC - MswatLib"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:settingsActivity="mswat.core.activityManager.ServicePreferences" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/serviceconfig" />
        </service>

        <activity
            android:name="mswat.core.activityManager.ServicePreferences"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.accessibilityservice.SERVICE_SETTINGS" />
            </intent-filter>
        </activity>

        <receiver
            android:name="hcim.auric.record.screen.mswat_lib.RecordInteraction"
            android:enabled="true" >
            <intent-filter>
                <action android:name="swat_interaction" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="mswat.touch.TPRTab2"
            android:enabled="true" >
            <intent-filter>
                <action android:name="mswat_tpr" />
                <action android:name="mswat_stop" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="mswat.touch.TPRNexusS"
            android:enabled="true" >
            <intent-filter>
                <action android:name="mswat_tpr" />
                <action android:name="mswat_stop" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="mswat.core.logger.Logger"
            android:enabled="true" >
            <intent-filter>
                <action android:name="mswat_init" />
                <action android:name="mswat_stop" />
            </intent-filter>
        </receiver>

        <activity
            android:name="mswat.core.calibration.CalibrationActivity"
            android:label="@string/title_activity_calibration" >
        </activity>
        <activity
            android:name="mswat.core.calibration.CalibrationScreen"
            android:label="@string/title_activity_calibration" >
        </activity>
        <activity android:name="hcim.auric.record.screen.mswat_lib.RunInteraction" >
        </activity>

        <receiver
            android:name="hcim.auric.record.screen.mswat_lib.WifiStart"
            android:enabled="true" >
            <intent-filter>
                <action android:name="mswat_init" />
            </intent-filter>
        </receiver>

        <service
            android:name="hcim.auric.record.screen.textlog.RecordSimpleText"
            class=".SimpleTextLogService"
            android:enabled="true"
            android:exported="false"
            android:label="AURIC - Simple Text"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action
                    android:name=".SimpleTextLogService"
                    android:value=".SimpleTextLogService" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
    </application>

</manifest>