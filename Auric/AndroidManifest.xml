<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcim.intrusiondetection"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/auric_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hcim.auric.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hcim.auric.activities.SettingsActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.IntrusionsListActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.InsertPasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.ConfirmAndTurnOffPasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.Unlock" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.ConfirmAndChangePasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.images.FullIntruderPicture" >
        </activity>
        <activity android:name="hcim.auric.activities.images.IntruderPictureGrid" >
        </activity>
        <activity android:name="hcim.auric.activities.images.RecognizedPicturesGrid" >
        </activity>
        <activity android:name="hcim.auric.activities.images.FullRecognizedPicture" >
        </activity>
        <activity android:name="hcim.auric.record.screen.screencast_root.RunScreencast" >
        </activity>
        <activity android:name="hcim.auric.record.screen.event_based.details.RunDetails" >
        </activity>
        <activity android:name="hcim.auric.record.screen.event_based.TimelineActivity" >
        </activity>
        <activity android:name="hcim.auric.record.screen.event_based.Details" >
        </activity>
        <activity android:name="hcim.auric.activities.images.IntrusionPicturesSlideShow" >
        </activity>
        <activity android:name="hcim.auric.activities.images.RecognizedPicturesSlideShow" >
        </activity>
        <activity android:name="hcim.auric.activities.images.SetOfPicturesSlideShow" >
        </activity>

        <service
            android:name="hcim.auric.authentication.BackgroundService"
            android:enabled="true" >
        </service>

        <activity android:name="hcim.auric.record.screen.mswat_lib.RunInteraction" >
        </activity>

        <service
            android:name="hcim.auric.record.screen.event_based.RecordEventBasedLog"
            class=".RecordEventBasedLog"
            android:enabled="true"
            android:exported="false"
            android:label="AURIC - Event based Log"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action
                    android:name=".RecordEventBasedLog"
                    android:value=".RecordEventBasedLog" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
    </application>

</manifest>