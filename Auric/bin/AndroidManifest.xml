<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcim.intrusiondetection"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/official_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hcim.auric.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hcim.auric.activities.settings.SettingsActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.IntrusionsListActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.InsertPasscode" >
        </activity>
        <activity
            android:name="hcim.auric.activities.settings.EditPicturesActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.ConfirmAndTurnOffPasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.Unlock" >
        </activity>
        <activity android:name="hcim.auric.activities.passcode.ConfirmAndChangePasscode" >
        </activity>
        <activity android:name="hcim.auric.activities.images.GridOfRecognizedPictures" >
        </activity>
        <activity android:name="hcim.auric.activities.images.FullPicture" >
        </activity>
        <activity android:name="hcim.auric.record.screen.screencast_root.RunScreencast" >
        </activity>
        <activity android:name="hcim.auric.record.screen.event_based.details.RunDetails" >
        </activity>
        <activity android:name="hcim.auric.record.screen.event_based.RunTimelineActivity" >
        </activity>
        <activity android:name="hcim.auric.record.screen.event_based.Details" >
        </activity>
        <activity android:name="hcim.auric.activities.SessionsListActivity" >
        </activity>
        <activity android:name="hcim.auric.activities.SessionIntrusionsList" >
        </activity>
        <activity android:name="hcim.auric.activities.images.SlideShowIntrusionPictures" >
        </activity>
        <activity android:name="hcim.auric.activities.images.SlideShowRecognizedPictures" >
        </activity>
        <activity android:name="hcim.auric.activities.images.SlideShowSetOfPictures" >
        </activity>
        <activity android:name="hcim.auric.activities.settings.SetUpPictures" >
        </activity>
        <activity android:name="hcim.auric.activities.setup.Welcome" >
        </activity>
        <activity android:name="hcim.auric.activities.setup.TestPhoto" >
        </activity>
        <activity android:name="hcim.auric.activities.apps.ListAppsActivity" >
        </activity>
        <activity
            android:name="hcim.auric.activities.setup.SetUp"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="hcim.auric.activities.setup.TestFaceRecognition"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>

        <service
            android:name="hcim.auric.service.BackgroundService"
            android:enabled="true" >
        </service>
        <service
            android:name="hcim.auric.record.screen.event_based.RecordEventBasedLog"
            class=".RecordEventBasedLog"
            android:enabled="true"
            android:exported="false"
            android:label="AURIC"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action
                    android:name=".RecordEventBasedLog"
                    android:value=".RecordEventBasedLog" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
    </application>

</manifest>