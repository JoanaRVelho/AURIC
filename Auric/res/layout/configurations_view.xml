<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="60sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/topbar"
            android:gravity="center"
            android:text="@string/configurations"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/config_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header" >

        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mypicture"
                android:layout_width="122dp"
                android:layout_height="216dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mypicture_title"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/image_not_found" />

            <Button
                android:id="@+id/change_picture_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mypicture"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="43dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_background"
                android:text="@string/change"
                android:textColor="#FFF" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mode_spinner"
                android:text="@string/device_sharing" />

            <TextView
                android:id="@+id/mode_title"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/sub_bar"
                android:gravity="center"
                android:text="@string/mode"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <Spinner
                android:id="@+id/mode_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mode_title"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/passcode_title"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mypicture"
                android:layout_marginTop="16dp"
                android:background="@drawable/sub_bar"
                android:gravity="center"
                android:text="@string/passcode_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/change_passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/passcode_switch"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background"
                android:text="@string/passcode_change"
                android:textColor="#FFF" />

            <Switch
                android:id="@+id/passcode_switch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/change_picture_button"
                android:layout_below="@+id/passcode_title"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="17dp"
                android:text="@string/passcode" />

            <TextView
                android:id="@+id/mypicture_title"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/checkBox1"
                android:layout_marginTop="16dp"
                android:background="@drawable/sub_bar"
                android:gravity="center"
                android:text="@string/mypicture"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/period_camera_title"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/change_passcode"
                android:layout_marginTop="16dp"
                android:background="@drawable/sub_bar"
                android:gravity="center"
                android:text="@string/period"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <Spinner
                android:id="@+id/screenshot_opt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/screenshots_title"
                android:layout_marginTop="15dp" />

            <Spinner
                android:id="@+id/camera_capture_opt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/period_camera_title"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/screenshots_title"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/camera_capture_opt"
                android:layout_marginTop="16dp"
                android:background="@drawable/sub_bar"
                android:gravity="center"
                android:text="@string/screenshots"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/all_imgs_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/change_picture_button"
                android:layout_alignLeft="@+id/change_picture_button"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:enabled="false"
                android:text="@string/all_imgs"
                android:textColor="#FFF"
                android:visibility="invisible" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>