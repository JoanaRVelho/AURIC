<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/topbar"
        android:gravity="center"
        android:text="@string/configurations"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mode_title"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:background="@drawable/sub_bar"
        android:gravity="center"
        android:text="@string/mode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/mypicture"
        android:layout_width="122dp"
        android:layout_height="216dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mypicture_title"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/image_not_found" />

    <Button
        android:id="@+id/change_picture_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mypicture"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="43dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_background"
        android:text="@string/change"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/mypicture_title"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mode_spinner"
        android:layout_marginTop="34dp"
        android:background="@drawable/sub_bar"
        android:gravity="center"
        android:text="@string/mypicture"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF" />

</RelativeLayout>