<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:columnCount="3"
        android:rowCount="4" >

        <Button
            android:id="@+id/pass_button1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/one"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/two"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/three"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/four"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/five"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button6"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/six"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button7"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/seven"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button8"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/eight"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button9"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/nine"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button0"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/zero"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pass_button_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:background="@drawable/button_background"
            android:onClick="onClickButtons"
            android:text="@string/del"
            android:textColor="@color/white" />
    </GridLayout>

  

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/topbar"
        android:gravity="center"
        android:text="@string/passcode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/passcode_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:columnCount="4"
        android:rowCount="1" >

        <ImageView
            android:id="@+id/passcode1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_marginBottom="19dp"
            android:src="@drawable/passcode_off" />
        
        <ImageView
            android:id="@+id/passcode2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_marginBottom="19dp"
            android:src="@drawable/passcode_off" />
        
        <ImageView
            android:id="@+id/passcode3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:layout_row="0"
            android:src="@drawable/passcode_off" />
        
        <ImageView
            android:id="@+id/passcode4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_marginBottom="19dp"
            android:src="@drawable/passcode_off" />
        
    </GridLayout>

</RelativeLayout>